<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"

	android:background="@drawable/black_white_gradient"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

	

    tools:context=".MainActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="10dp" >
        
        <Button
            android:id="@+id/main_btn_connect_mcp"
            android:layout_span="2"
            android:text="connect2MCP"
            android:alpha="255"
            />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:id="@+id/main_txt_log_output"
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:minLines="10"
            android:text="Log Output" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
		android:layout_gravity="right"
        >

        <TextView
            android:id="@+id/main_txt_current_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:minLines="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current MCP Command" />

        <TextView
            android:id="@+id/main_txt_char_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:minLines="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-" 
            />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="10dp"
		android:layout_gravity="right"
        >

        <TextView
            android:id="@+id/main_txt_physical_id_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Assigned physical ID" />

        <TextView
            android:id="@+id/main_txt_physical_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
			android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginBottom="10dp"
		android:layout_gravity="right"
        >

        <TextView
            android:id="@+id/main_txt_logical_id_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Assigned logical ID" />

        <TextView
            android:id="@+id/main_txt_logical_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="-" />
    </TableRow>


</TableLayout>